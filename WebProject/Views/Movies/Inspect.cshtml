@model WebProject.Models.Movie
@{
    ViewBag.Title = "Inspect";
    bool isUpcoming = Model.releaseDate > DateTime.Now;
}

<div class="content-wrapper">
    <div class="inspect-page">
        <div class="movie-info">
            <div class="movie-info-img">
                <img src="@Url.Content("~/images/" + Model.movieImg)" alt="@Model.title" />
            </div>
            <div class="movie-info-text">
                <div class="movie-title">
                    <h1>@Model.title</h1>
                    <div class="title-detail">
                        <p>Director: @Model.director</p>
                        <p><img src="@Url.Content("~/images/imdb.png")" alt="" class="tiny-image" />@Model.imdb</p>
                    </div>
                </div>

                <div class="movie-info-detail">
                    <p>Genre: @Model.genre</p>
                    <p><img src="@Url.Content("~/images/date.png")" alt="" class="tiny-image" />@Model.releaseDate.ToString("dd.MM.yyyy")</p>
                    <p><img src="@Url.Content("~/images/time.png")" alt="" class="tiny-image" />@String.Format("{0} minutes", (int)Model.duration)</p>
                </div>
                <div class="movie-info-desc">
                    <p>@Model.description</p>
                </div>
                <div class="movie-info-button">

                    @if (!isUpcoming)
                    {
                        <a href="@Url.Action("SelectTicket", "BuyTicket", new { movieId = Model.MovieID })">Buy Ticket</a>
                    }
                    </div>
            </div>
        </div>
    </div>
</div>


<script src="@Url.Content("~/Scripts/scriptinspect.js")"></script>